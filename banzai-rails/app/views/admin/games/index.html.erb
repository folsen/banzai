<h1>Listing games</h1>

<table>
  <tr>
    <th>Starts at</th>
    <th>Rounds</th>
    <th>City</th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%=h game.starts_at %></td>
    <td><%=h game.rounds %></td>
    <td><%=h game.city %></td>
    <td><%= link_to 'Show', admin_game_path(game) %></td>
    <td><%= link_to 'Edit', edit_admin_game_path(game) %></td>
    <td><%= link_to 'Destroy', admin_game_path(game), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New game', new_admin_game_path %>